{
    "name": "chr0n1x/php_codesniffer_tests",
    "description": "A test lib that can easily be required & used in custom PHP_CodeSniffer rulesets",
    "type": "library",
    "keywords": [
        "phpcs",
        "standards",
        "tests"
    ],
    "autoload": {
        "classmap": [
            "AbstractSniffUnitTest.php"
        ]
    },
    "suggest": {
        "phpunit/php-timer": "dev-master"
    },
    "require": {
        "php": ">=5.1.2",
        "ext-tokenizer": "*",
        "squizlabs/php_codesniffer": "~1.5",
        "phpunit/phpunit": ">=3.7"
    }
}
